{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended",
		"plugin:vue/strongly-recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"rules": {
		"no-console": 0,
		"vue/html-indent": [
			"error",
			"tab",
			{
				"attribute": 1,
				"baseIndent": 1,
				"closeBracket": 0,
				"alignAttributesVertically": true,
				"ignores": []
			}
		],
		"vue/max-attributes-per-line": [
			"error",
			{
				"singleline": 8,
				"multiline": {
					"max": 8,
					"allowFirstLine": true
				}
			}
		],
		"vue/html-self-closing": [
			"error",
			{
				"html": {
					"void": "any",
					"normal": "never",
					"component": "always"
				},
				"svg": "always",
				"math": "always"
			}
		]
	}
}